<div class="container table-container">
  <div>
    <a href="/admin/add-product" class="btn btn-success mt-3 float-end">Add Product</a>
  </div>

  <table class="table" id="productTable">
    <thead class="mt-3">
      <tr>
        <th scope="col">No</th>
        <th scope="col">Name</th>
        <th scope="col">Category</th>
        <th scope="col">Description</th>
        <th scope="col">Price</th>
        <th scope="col">Image</th>
        <th scope="col">Options</th>
      </tr>
    </thead>
    <tbody>
      {{#each products}}
      <tr>
        <th scope="row">{{this.index}}</th>
        <td>{{this.productName}}</td>
        <td>{{this.category}}</td>
        <td>{{this.description}}</td>
        <td>â‚¹{{this.price}}</td>
        <td>
          <img style="height: 50px; width: 50px;" src="/images/product-images/{{this._id}}.jpg" alt="loading..">
        </td>
        <td>
          <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
          <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<script>
  $(document).ready(function() {
    $('#productTable').DataTable();
  });
</script>
