<style>
  .card-img-top {
  width: 100%;
  height: auto;
}

@media (max-width: 576px) {
  .card {
    margin-bottom: 1rem;
  }
}

</style>
<div class="container mt-5">
  <div class="row">
    {{#each products}}
    <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
      <div class="card h-100">
        <img class="card-img-top img-fluid" src="/images/product-images/{{this._id}}.jpg" alt="{{this.productName}}" style="object-fit: cover; height: 200px;">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title">{{this.productName}}</h5>
          <p class="card-text">{{this.description}}</p>
          <h5>â‚¹{{this.price}}</h5>
          <button onclick="addToCart('{{this._id}}')" class="btn btn-primary mt-auto">Add to cart</button>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>
