<div class="container mt-5">
  <div class="row">
    {{#each products}}
    <div class="col-md-3 mb-4">
      <div class="card h-100">
        <img class="card-img-top img-fluid" src="/images/product-images/{{this._id}}.jpg" alt="Card image cap" style="object-fit: cover; height: 200px;">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title">{{this.productName}}</h5>
          <p class="card-text">{{this.description}}</p>
          <h5>â‚¹{{this.price}}</h5>
          <button onclick="addToCart('{{this._id}}')" class="btn btn-primary mt-auto">Add to cart</button>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>
