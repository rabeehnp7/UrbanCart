function verifyPayment(payment,order){
    $.ajax({
        url:'/verify-payment',
        data:{
            order,
            payment
        },
        method:'post',
        success:(response)=>{
          if(response==='success'){
              location.href='/order-success'
          }else{
            alert("payment failed")
          }
        }
