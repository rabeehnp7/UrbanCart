<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col"></th>
            <th scope="col">Product</th>
            <th scope="col">Price</th>
            <th scope="col">Quantity</th>
            <th scope="col">Total</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          {{#each products}}
          <tr id="item{{this.proId}}">
            <td><img style="height: 50px;width: 50px;" src="/images/product-images/{{this.proId}}.jpg" alt="loading.."></td>
            <td>{{this.productName}}</td>
            <td><span>₹{{this.price}}</span></td>
            <td>
              <button onclick="updateCount('{{this.cartId}}','{{this.proId}}',-1,'{{this.price}}')" type="button" id="decrement{{this.proId}}" class="btn btn-danger">-</button>
              <span id="quant{{this.proId}}">{{this.quantity}}</span>
              <button onclick="updateCount('{{this.cartId}}','{{this.proId}}',+1,'{{this.price}}')" type="button" id="increment" class="btn btn-success">+</button></td>
            <td><span id="proTotal{{this.proId}}">{{this.totalPrice}}</span></td>
            <td>
              <button onclick="deleteItem('{{this.cartId}}','{{this.proId}}')" class="btn btn-danger">Remove</button>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    
   <div class="row justify-content-end">
  <div class="col-md-4 pt-5">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Order Summary</h4>
        <hr>
        <h5>Total:₹ <span id="grandTotal">{{grandTotal}}</span></h5>
        <a href="/place-order"><button class="btn btn-success btn-block mt-3">Checkout</button></a>
      </div>
    </div>
  </div>
</div>

    </div>
  </div>
</div>
